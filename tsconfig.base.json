{
  "compileOnSave": false,
  "compilerOptions": {
    "noEmit": true,
    "rootDir": ".",
    "sourceMap": false,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "target": "es2015",
    "module": "esnext",
    "lib": ["es2017", "dom"],
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@monorepo-test/shared/types": ["libs/shared/types/src/index.ts"],
      "@monorepo-test/shared/constants": ["libs/shared/constants/src/index.ts"],
      "@monorepo-test/shared/endpoints": ["libs/shared/endpoints/src/index.ts"],
      "@monorepo-test/shared/frontend/hooks": [
        "libs/shared/frontend/hooks/src/index.ts"
      ],
      "@monorepo-test/shared/frontend/api": [
        "libs/shared/frontend/api/src/index.ts"
      ],
      "@monorepo-test/shared/frontend/ui": [
        "libs/shared/frontend/ui/src/index.ts"
      ]
    },
    "noImplicitAny": true,
    "forceConsistentCasingInFileNames": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "jsx": "react"
  },
  "exclude": ["node_modules", "tmp"]
}
